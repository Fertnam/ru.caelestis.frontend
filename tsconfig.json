{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "webpack-env"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@plugins/*": [
                "src/plugins/*"
            ],
            "@classes/*": [
                "src/classes/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@default-views/*": [
                "src/views/default/*"
            ],
            "@admin-views/*": [
                "src/views/admin/*"
            ],
            "@default-components/*": [
                "src/components/default/*"
            ],
            "@admin-components/*": [
                "src/components/admin/*"
            ],
            "@global-components/*": [
                "src/components/global/*"
            ],
            "@default-data/*": [
                "src/data/default/*"
            ],
            "@admin-data/*": [
                "src/data/admin/*"
            ],
            "@global-data/*": [
                "src/data/global/*"
            ],
            "@scss/*": [
                "src/assets/scss/*"
            ],
            "@default-scss-modules/*": [
                "src/assets/scss/modules/default/*"
            ],
            "@admin-scss-modules/*": [
                "src/assets/scss/modules/admin/*"
            ],
            "@global-scss-modules/*": [
                "src/assets/scss/modules/global/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
